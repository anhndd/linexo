<?xml version="1.0" encoding="utf-8"?>
<vn.edu.hcmut.linexo.presentation.view.play.ChatViewLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/bg_message"/>
    <TextView
        android:id="@+id/txt_message_system"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_message_system"/>
    <vn.edu.hcmut.linexo.presentation.custom.CircleImageView
        android:id="@+id/civ_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_message_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</vn.edu.hcmut.linexo.presentation.view.play.ChatViewLayout>