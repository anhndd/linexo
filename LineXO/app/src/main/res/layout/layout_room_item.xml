<?xml version="1.0" encoding="utf-8"?>
<vn.edu.hcmut.linexo.presentation.custom.RoomViewLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/room_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_roomview" />
    <vn.edu.hcmut.linexo.presentation.custom.CircleImageView
        android:id="@+id/civ_opponent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <vn.edu.hcmut.linexo.presentation.custom.CircleImageView
        android:id="@+id/civ_host"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:id="@+id/lock_room_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_lock_gray" />
    <View
        android:id="@+id/pen_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_pen" />
    <TextView
        android:id="@+id/txt_room_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        />
</vn.edu.hcmut.linexo.presentation.custom.RoomViewLayout>